<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/sequenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sequence"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Views for displaying the sequence -->
    <View
        android:id="@+id/sequenceItem1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/primaryColor"
        app:layout_constraintTop_toBottomOf="@id/sequenceTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/sequenceItem2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/accentColor"
        app:layout_constraintTop_toTopOf="@id/sequenceItem1"
        app:layout_constraintStart_toEndOf="@id/sequenceItem1"
        android:layout_marginStart="10dp"/>



    <Button
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        style="@style/AppButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
